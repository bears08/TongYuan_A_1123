<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:background="#fff3f4f4" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:id="@id/my_address_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="14.0dip"
                android:src="@mipmap/mine_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="收货地址"
                android:textColor="#ff000000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_my_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:paddingRight="10.0sp"
                android:text="新外大街23号院"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0sp"
                android:src="@mipmap/arrow" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:id="@id/my_order_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="14.0dip"
                android:src="@mipmap/home_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="我的订单"
                android:textColor="#ff000000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:paddingRight="10.0sp"
                android:text="6"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0sp"
                android:src="@mipmap/arrow" />
        </LinearLayout>


        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:id="@id/my_balance_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="14.0dip"
                android:src="@mipmap/balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="账户余额"
                android:textColor="#ff000000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_my_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:paddingRight="10.0sp"
                android:text="10"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0sp"
                android:src="@mipmap/arrow" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:id="@id/my_point_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="14.0dip"
                android:src="@mipmap/score" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="我的积分"
                android:textColor="#ff000000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_point_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:paddingRight="10.0sp"
                android:text="23"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0sp"
                android:src="@mipmap/arrow" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />


        <LinearLayout
            android:id="@id/my_youhui_layout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="14.0dip"
                android:src="@mipmap/coupon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="5.0dip"
                android:text="我的优惠"
                android:textColor="#ff000000"
                android:textSize="17.0sp" />

            <TextView
                android:id="@id/tv_my_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="right|center"
                android:paddingRight="10.0sp"
                android:text="8"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0sp"
                android:src="@mipmap/arrow" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_width="fill_parent" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:background="#fff3f4f4" />

        <Button
            android:id="@id/btn_logout"
            android:layout_width="fill_parent"
            android:layout_height="41.0dip"
            android:layout_marginBottom="14.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_marginTop="14.0dip"
            android:background="@drawable/login_button_selector"
            android:text="退出登录"
            android:textColor="#ffffffff"
            android:textSize="17.0sp" />

    </LinearLayout>
</LinearLayout>