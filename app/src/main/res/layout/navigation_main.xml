<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/navigation_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="#ffe72b48"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10.0dip"
        android:clickable="false"
        android:paddingLeft="10.0dip"
        android:paddingRight="8.0dip"
        android:src="@drawable/go_back_selector"
        android:visibility="visible" />


    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/addressloc"
        android:drawablePadding="2.0dip"
        android:drawableRight="@drawable/switchaddress"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:text="新街口外大街"
        android:textSize="21.0sp" />

    <ImageView
        android:id="@id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0.0dip"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="0.0dip"
        android:paddingRight="10.0dip"
        android:src="@mipmap/shop_car_normal" />

    <TextView
        android:id="@+id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/right_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/right_button"
        android:background="@mipmap/number_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="0.0dip"
        android:text="10"
        android:textColor="#ffffffff"
        android:textSize="10.0sp" />
</RelativeLayout>