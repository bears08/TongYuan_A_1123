<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/head_bg"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:focusable="false"
        android:paddingLeft="10.0dip"
        android:paddingRight="8.0dip"
        android:src="@drawable/go_back_selector"
        android:visibility="visible" />

    <TextView
        android:id="@+id/head_title"
        style="@style/style_18_BEBEBE_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/head_right_car"
        android:layout_alignBottom="@+id/head_right_car"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/head_right_car"
        style="@style/style_15_EBEBEB_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="10dip"
        android:background="@mipmap/bar_shopping_normal"
        android:clickable="true"
        android:gravity="center"
        android:visibility="visible" />
<!--         android:background="@drawable/number_bg"-->
    <TextView
        android:id="@+id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/left_button"
        android:layout_alignBottom="@id/left_button"
        android:layout_alignRight="@id/head_right_car"
        android:background="@mipmap/number_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="0.0dip"
        android:text="10"
        android:textColor="#ffffffff"
        android:textSize="10.0sp"
        android:textStyle="bold" />

</RelativeLayout>